    var hammertime = new Hammer(document.getElementById("iStudy"));
    //添加事件
    hammertime.on("swipeleft", function (e) {
    	var indexn="1";
    	var unitcount="1";
    	unitcount=parseInt(unitcount)-1;
    	if(indexn!=unitcount)
    	{
           window.location.href="/mobile/wordstudy/study/indexn/1/indexp/-1/model/pm/flag/0";
        }
    	else
