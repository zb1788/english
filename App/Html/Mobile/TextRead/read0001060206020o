                var unitcount="27";
            
                
                unitcount=parseInt(unitcount)-1;
                if(indexn!=unitcount)
                {
                   window.location.href="/mobile/textread/read/unitid/0001060206020s/indexn/18/indexp/16/model/tm/flag/0";
