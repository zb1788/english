<script type="text/javascript"> 
$(".tips").hide();
mp = new Mplay();
var unitid="00010402040223";
var textcount=$(".con").length;
mp.index=0;
mp.url = "http://en2.czbanbantong.com:8080/yylmp3/mp3_text/";
