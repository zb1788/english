                else
                {
                   $(".con:last span").text("您已经背诵到最有一个单元了，恭喜你已经学完本册书籍");
                   return false;
                }
            }
            
            if(i>0)
            {
              $('.text:eq('+i+') h3').click();
            }
            
            if((i)==4){$(".tips").show();}
            if((i)==0)
            {
            	$(".wbBtn.bLine p:eq(1)").hide();            	
          	    var indexp="0";
            	if(indexp!='-1')
