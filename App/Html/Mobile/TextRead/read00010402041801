             if((i-1)==4)
            {
                $(".wbBtn.bLine p:eq(1)").hide(); 
                $(".con:last span").text("正在加载下一单元......");
                var indexn="1";
                var unitcount="9";
            
                
                unitcount=parseInt(unitcount)-1;
                if(indexn!=unitcount)
                {
                   window.location.href="/mobile/textread/read/unitid/00010402041802/indexn/1/indexp/-1/model/tm/flag/0";
                }
                else
                {
                   $(".con:last span").text("您已经背诵到最有一个单元了，恭喜你已经学完本册书籍");
                   return false;
                }
            }
            
            if(i>0)
            {
              $('.text:eq('+i+') h3').click();
            }
            
            if((i)==4){$(".tips").show();}
            if((i)==0)
            {
            	$(".wbBtn.bLine p:eq(1)").hide();            	
          	    var indexp="-1";
